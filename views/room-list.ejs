<!DOCTYPE html>
<html>

<head>
    <title>Rooms</title>
    <link rel="stylesheet" href="css/room-list.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/07b8d94df6.js" crossorigin="anonymous"></script>
    <script src="js/room-pass.js"></script>
</head>

<body>
    <h1 class="title">Game Rooms</h1>

    <!-- Navigation -->
    <div class="nav">
        <ul>
            <li><a href="home">Home</a></li>
            <li><a href="room-list" class="current">Games</a></li>
            <li><a href="profile">Profile</a></li>
            <li><a href="rank">Rank</a></li>
            <li><a href="store">Store</a></li>
        </ul>
    </div>

    <!-- Game List -->
    <div class="search">
        <label>
            <input type="text" placeholder="Search...">
        </label>

        <label class="checkbox-inline">Hide Private Rooms
            <input type="checkbox">
            <span class="checkmark"></span>
        </label>

        <label class="checkbox-inline">Hide Full Rooms
            <input type="checkbox">
            <span class="checkmark"></span>
        </label>
        <a href="create-room"><button>Create Room</button></a>
    </div>

    <div style="padding-top: 0" class="container game-list">
        <div class="row">
            <div class="col-lg-8 mx-auto bg-white rounded shadow">

                <!-- Fixed header table-->
                <div class="table-responsive">
                    <table class="table table-fixed">
                        <thead>
                        <tr>
                            <th scope="col" class="col-6">Room Name</th>
                            <th scope="col" class="col-2 center">Game</th>
                            <th scope="col" class="col-2 center">Players</th>
                            <th scope="col" class="col-2 center">Action</th>
                        </tr>
                        </thead>

                        <tbody>
                        <% for(var gameRoom of results) { %>
                            <tr>
                                <th scope="row" class="col-6"><%=gameRoom.RoomName%></th>
                                <td class="col-2 <%=gameRoom.GameMode.toLowerCase()%> center"><%=gameRoom.GameMode%></td>
                                <td class="col-2 center"><%=gameRoom.PlayerCount%>/<%=gameRoom.PlayerCapacity%></td>
                                <td class="col-2 center">
                                    <form action="/game/<%=gameRoom.ID%>">
                                        <input type="submit" value="Join" onclick="passPopup()"/>
                                    </form>
                                </td>
                            </tr>
                        <% }%>
                        </tbody>
                    </table>
                </div><!-- End -->
                <form id="room-password-popup" action="/room-password" method="post">
                    <label for="room-password">Enter Password: </label>
                    <input name="room-password" id="room-password" type="password"/>
                    <input type="submit" value="Join"/>
                </form>
            </div>
        </div>
    </div>

    <!-- Javascript -->
</body>
</html>