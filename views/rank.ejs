<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="#">
    <meta name="keywords" content="#">

    <link rel="stylesheet" href="css/mainstyle.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,500,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css"
        integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

    <title>Gameway - RANK</title>
</head>

<body>
    <!--BEGIN MAIN NAVIGATION-->
    <nav class="main-nav">
        <a href="room-list">
            <h1><i class="fas fa-play-circle"></i></h1>
        </a>
        <a href="home">
            <h1>HOME</h1>
        </a>
        <a href="profile">
            <h1>PROFILE</h1>
        </a>
        <a class="current" href="rank">
            <h1>RANK</h1>
        </a>
        <a href="store">
            <h1>STORE</h1>
        </a>
        <div class="currency">
            <div class="cash">
                <i class="fas fa-money-bill"></i>
                <span>2147483647</span>
            </div>
            <div class="coins">
                <i class="fas fa-coins"></i>
                <span>2147483647</span>
            </div>
        </div>
    </nav>
    <!--END MAIN NAVIGATION-->
    <div class="social">

    </div>
    <main>
        <header>
            <div class="header">
                <div class="leaderboard-title">
                    <h1>Leaderboard</h1>
                </div>
                <form class="search-box">
                    <div class="btn-toggle">
                        <button onclick="return transfer()"><i class="fas fa-search"></i></button>
                    </div>
                    <input type="text" class="search-player" placeholder="Search Player...">
                </form>
            </div>
        </header>
        <div class="rank-wrapper">
            <div class="categories">
                <h3>Rank</h3>
                <h3>Name</h3>
                <h3>Wins</h3>
                <h3>Points</h3>
            </div>
            <div class="wrapper">
                <% for(let user of results01) { %>
                <a href="/profile/<%=user.Username%>">
                    <div class="player-stats">
                        <div class="rank"><%=user.Rank%></div>
                        <div class="name"><%=user.Username%></div>
                        <div class="wins"><%=user.GamesWon%></div>
                        <div class="points"><%=user.RankPoints%></div>
                    </div>
                </a>
                <% }%>

            </div>
        </div>
    </main>
</body>
<script src="/js/script.js"></script>

</html>